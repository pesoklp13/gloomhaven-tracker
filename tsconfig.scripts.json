{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "./scripts",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "commonjs",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "outDir": "./dist/scripts"
  },
  "include": ["scripts"],
  "exclude": ["node_modules", "tmp"]
}
